// Manages concurrent communications with websockets

package main

import "fmt"

type Hub struct {
	clients map[*Client]bool
	register chan *Client
	unregister chan *Client
	broadcast_status chan []tu
}

func (h* Hub) handle_events() {
	for {
		select {
		case ct := <-h.register:
			fmt.Printf("Registerin user\n")
			h.clients[ct] = true
		case ct := <-h.unregister:
			delete(h.clients, ct)
			ct.conn.Close()
		}
	}
}